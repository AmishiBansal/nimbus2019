<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nith.appteam.nimbus.Activity.ProfileNew">
    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:elevation="2dp"
        android:id="@+id/pbcenter"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <View
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/curve_toolbar_bg"
            />
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="108dp"
            android:layout_height="108dp"
            android:elevation="4dp"
            app:civ_circle_background_color="@color/white"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="142dp"
            android:src="@drawable/user"
            android:id="@+id/profilePicture"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/profilePicture"
            android:layout_marginTop="16dp"
            android:text="Abhinav Lamba"
            android:textSize="20sp"
            android:id="@+id/profileName"
            android:textColor="#000"
            android:visibility="gone"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/details"
            android:layout_below="@id/profileName"
            android:layout_marginTop="16dp"
            android:text="Private Details"
            android:textSize="20sp"
            android:layout_marginLeft="16dp"
            android:textColor="#000"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/details"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:textSize="16sp"
            android:paddingTop="8dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:id="@+id/name"
            android:paddingBottom="8dp"
            android:background="@drawable/profile_background"
            android:layout_marginTop="4dp"
            android:textColor="#000"
            android:hint="Name"
            android:textColorHint="#bdbdbd"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/name"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:textSize="16sp"
            android:paddingTop="8dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:id="@+id/email"
            android:paddingBottom="8dp"
            android:background="@drawable/profile_background"
            android:layout_marginTop="4dp"
            android:textColor="#000"
            android:hint="Email"
            android:textColorHint="#bdbdbd"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/email"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:textSize="16sp"
            android:paddingTop="8dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:id="@+id/rollno"
            android:paddingBottom="8dp"
            android:background="@drawable/profile_background"
            android:layout_marginTop="8dp"
            android:textColor="#000"
            android:hint="Roll Number"
            android:textColorHint="#bdbdbd"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rollno"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:textSize="16sp"
            android:paddingTop="8dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:id="@+id/year"
            android:paddingBottom="8dp"
            android:background="@drawable/profile_background"
            android:layout_marginTop="8dp"
            android:textColor="#000"
            android:hint="Year"
            android:textColorHint="#bdbdbd"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/year"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:textSize="16sp"
            android:paddingTop="8dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:id="@+id/branch"
            android:paddingBottom="8dp"
            android:background="@drawable/profile_background"
            android:layout_marginTop="8dp"
            android:textColor="#000"
            android:hint="Branch"
            android:textColorHint="#bdbdbd"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="16dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/login_button"
            android:id="@+id/submit"
            android:paddingTop="12dp"
            android:gravity="center"
            android:paddingBottom="12dp"
            android:text="Submit"
            android:textSize="16sp"
            android:layout_marginTop="64dp"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:textColor="#fff"
            />
        <ProgressBar
            android:id="@+id/login_progress"
            android:layout_width="wrap_content"
            android:theme="@style/progressBarBlue"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="40dp"
            android:visibility="gone" />
    </RelativeLayout>
</RelativeLayout>